<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="App5.Views.Navigation.NavigationListCardPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:App5.Controls"
    xmlns:listView="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms"
    xmlns:template="clr-namespace:App5.Views.Templates"
    xmlns:viewModel="clr-namespace:App5.ViewModels.Navigation"
    Title="Contributors">

    <ContentPage.ToolbarItems>
        <ToolbarItem  x:Name="btnSignInSignOut" 
                      Text="Add" 
                      Clicked="OnSignInSignOut"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <ListView x:Name="listView"
              ItemSelected="OnListViewItemSelected"
                  Grid.Row="2"
                  HasUnevenRows="true"
                  SeparatorVisibility="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame BorderColor="White" Margin="10">
                                <Frame.Triggers>
                                    <DataTrigger Binding="{Binding IsSelected}" TargetType="{x:Type Frame}" Value="True">
                                        <Setter Property="BackgroundColor" Value="Green"/>
                                    </DataTrigger>
                                </Frame.Triggers>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="20"></RowDefinition>
                                        <RowDefinition Height="20"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="40"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>

                                    <Label Grid.Row="0" Grid.Column="2" Text="{Binding Name}" LineBreakMode="TailTruncation"></Label>
                                <Label Grid.Row="1" Grid.Column="2" Text="{Binding EmailAddress}" Font="Small"  TextColor="Gray" LineBreakMode="TailTruncation"></Label>
                                    <Image Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Source="xamarin.png" Aspect="AspectFit"/>
                                </Grid>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--  Title View  -->

    </ContentPage.Content>
</ContentPage>